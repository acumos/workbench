FROM node:10-alpine

CMD mkdir /opt/app/datasource-catalog-component
ADD . /opt/app/datasource-catalog-component

WORKDIR /opt/app/datasource-catalog-component

RUN npm install --unsafe-perm

# Build component
RUN npm run build:component

RUN chmod 777 -R /opt/app/

EXPOSE 9092
CMD npm run run:api